<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="row mb-3">                
                <label asp-for="PageId" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PageId" class="form-control" />
                    <span asp-validation-for="PageId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="PageTitle" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PageTitle" class="form-control" />
                    <span asp-validation-for="PageTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="LanguageId" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="LanguageId" class="form-control" value="vn-vi"/>
                    <span asp-validation-for="LanguageId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="PageContent" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="PageContent" id="editor" rows="10"></textarea>
                    <span asp-validation-for="PageContent" class="text-danger"></span>
                </div>
            </div>
