@model IEnumerable<WebShop.Models.Product>
@{
    ViewData["Title"] = "Search Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <!--left panel (3/12 columns)----------------------------->
    <div class="col-3">
        <!--Product Categories-->
        <div class="alert alert-primary" role="alert">
            <h5 class="alert-heading">Product categories</h5>
        </div>
        <div class="list-group">
            @foreach (var category in ViewBag.ProductCategories)
            {
                <a href="#" class="list-group-item list-group-item-action">@category.CategoryName</a>
            }           
        </div>
        <!--Search-->
        <div class='row mt-3'></div>
        <div class="card border-success mb-3">
            <div class="card-header">Tìm kiếm</div>
            <div class="card-body text-success">
                <form class="form-inline" asp-controller="Product" asp-action="Search">
                    <p>
                        <label for="keyword" class="sr-only">Từ khoá</label>
                        <input type="text" class="form-control" id="keyword" name="keyword" placeholder="từ khoá">
                    </p>
                    <p><button type="submit" class="btn btn-success mb-2">Tìm</button></p>
                </form>
            </div>
        </div>        
    </div>
    <!--end left panel------------------------------------->
    <!--right panel (9/12 columns)----------------------------->
    <div class="col-9">
        <div class="alert alert-primary" role="alert">
            <h5 class="alert-heading">Search result: found @Model.Count() products</h5>
        </div>
        <div class="row">
            @foreach (Product product in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        @if (product.SmallImage != null)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(product.SmallImage)" class="card-img-top" alt="...">
                        }
                        else
                        {
                            <img src="~/images/no-image.png" class="card-img-top" alt="No Image">
                        }                        
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.ShortDesc</p>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">View Detail</a>
                    </div>
                </div>
            </div>
            }        
        </div>
    </div>
    <!--end right panel------------------------------------->
</div>
